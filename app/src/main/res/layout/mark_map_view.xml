<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="56dp"
    android:layout_height="56dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/mark_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@color/primary"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/ShapeAppearance.App.RoundedMarkImageView" />

    <com.example.flocator.main.ui.views.FriendMapView
        android:id="@+id/friend_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom"
        app:layout_constraintBottom_toBottomOf="@+id/mark_image"
        app:layout_constraintEnd_toEndOf="@+id/mark_image"
        app:radius="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>